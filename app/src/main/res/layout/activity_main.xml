<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10sp"
        android:padding="1dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"
        android:src="@drawable/user" />



    <ImageButton
        android:id="@+id/wells_fargo"
        app:layout_constraintTop_toBottomOf="@+id/user"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="40dp"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@drawable/roundcorner"
        app:srcCompat="@drawable/wells_fargo"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="111dp" />

    <ImageButton
        android:id="@+id/discover"
        app:layout_constraintTop_toBottomOf="@+id/user"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="40dp"
        android:layout_marginBottom="40dp"
        android:layout_width="150dp"
        android:background="@drawable/roundcorner"
        android:layout_height="80dp"
        app:srcCompat="@drawable/discover"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="111dp" />

    <ImageButton
        android:id="@+id/citibank"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/roundcorner"
        app:layout_constraintTop_toBottomOf="@+id/wells_fargo"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/citibank"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="249dp"
        />

    <ImageButton
        android:id="@+id/chase"
        android:layout_width="150dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/roundcorner"
        app:layout_constraintTop_toBottomOf="@+id/discover"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="80dp"

        android:layout_marginLeft="40dp"
        app:srcCompat="@drawable/chase"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="249dp" />

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@+id/chase"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="40dp"
        android:padding="12dp"
        android:id="@+id/activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="436dp" >


        <TextView
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:text="Recent Activities\n $300 purchase from Amazon \n 10/15/2021 \n \n $20 purchase from Walmart \n 10/12/2021 "
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="358dp" >

        </TextView>

        <Button
            android:id="@+id/button"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See more" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@+id/activities"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="40dp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="436dp" >


        <TextView
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:text="New Features\n \n Save towards a goal\n \n Buy a new House \n \n Buy Cryptocurrency"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="358dp" >

        </TextView>



    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>


